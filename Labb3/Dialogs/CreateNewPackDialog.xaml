<Window x:Class="Labb3.Dialogs.CreateNewPackDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create New Pack" Width="350" Height="150">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Pack Name"/>
            <TextBox Text="{Binding Name}" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
                <Button Content="Create" IsDefault="True" Command="{Binding OkCommand}" />
                <Button Content="Cancel" IsCancel="True" Command="{Binding CancelCommand}" Margin="8,0,0,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
