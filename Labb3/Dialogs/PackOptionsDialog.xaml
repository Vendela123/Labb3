<Window x:Class="Labb3.Dialogs.PackOptionsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pack Options" Height="250" Width="350"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <StackPanel Margin="20">

        <TextBlock Text="Pack Name:"/>
        <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                 Margin="0 0 0 10"/>

        <TextBlock Text="Difficulty:"/>
        <ComboBox SelectedItem="{Binding Difficulty}"
                  Margin="0 0 0 10">
            <ComboBoxItem Content="Easy"/>
            <ComboBoxItem Content="Medium"/>
            <ComboBoxItem Content="Hard"/>
        </ComboBox>

        <TextBlock Text="Time per question (seconds):"/>
        <TextBox Text="{Binding TimePerQuestion, UpdateSourceTrigger=PropertyChanged}"
                 Margin="0 0 0 15"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Save" Width="80" Margin="5" Click="Save_Click"/>
            <Button Content="Cancel" Width="80" Margin="5" IsCancel="True"/>
        </StackPanel>

    </StackPanel>
</Window>
