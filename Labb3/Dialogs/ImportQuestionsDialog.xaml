<Window x:Class="Labb3.Dialogs.ImportQuestionsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Import Questions" Height="300" Width="400"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Category:" FontWeight="Bold"/>
        <ComboBox x:Name="CategoryCombo" Grid.Row="0" Margin="100,0,0,5"/>

        <TextBlock Text="Difficulty:" FontWeight="Bold" Grid.Row="1" Margin="0,10,0,0"/>
        <ComboBox x:Name="DifficultyCombo" Grid.Row="1" Margin="100,10,0,5">
            <ComboBoxItem Content="easy"/>
            <ComboBoxItem Content="medium"/>
            <ComboBoxItem Content="hard"/>
        </ComboBox>

        <TextBlock Text="Number of Questions:" FontWeight="Bold" Grid.Row="2" Margin="0,10,0,0"/>
        <TextBox x:Name="AmountBox" Grid.Row="2" Margin="150,10,0,5" Width="60" Text="5"/>

        <Button x:Name="ImportButton" Content="Import" Grid.Row="3" Width="100" Height="30"
                HorizontalAlignment="Left" Margin="0,20,0,0" Click="ImportButton_Click"/>

        <TextBlock x:Name="StatusText" Grid.Row="4" Margin="0,10,0,0" TextWrapping="Wrap"/>
    </Grid>
</Window>
