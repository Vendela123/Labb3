<Application x:Class="Labb3.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModels="clr-namespace:Labb3.ViewModels"
             xmlns:views="clr-namespace:Labb3.Views"
             xmlns:conv="clr-namespace:Labb3.Converters"
             StartupUri="MainWindow.xaml">

    <Application.Resources>

        <conv:AnswerCorrectConverter x:Key="AnswerCorrectConverter" />

        <DataTemplate DataType="{x:Type viewModels:ConfigurationViewModel}">
            <views:ConfigurationView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModels:PlayerViewModel}">
            <views:PlayerView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModels:ResultViewModel}">
            <views:ResultView/>
        </DataTemplate>

        <Style TargetType="Control">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>


        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="6"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#999"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="6"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Application.Resources>
</Application>
