<Window x:Class="Labb3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:Labb3.Views"
        Title="Quiz Configurator" Height="700" Width="1000"
        Background="#F5DADF" Foreground="White" FontSize="16">

    <Window.InputBindings>
        <KeyBinding Key="P" Modifiers="Control" Command="{Binding SwitchToPlayCommand}" />

        <KeyBinding Key="E" Modifiers="Control" Command="{Binding SwitchToEditCommand}" />

        <KeyBinding Key="O" Modifiers="Control" Command="{Binding EditPackOptionsFromMenuCommand}" />

        <KeyBinding Key="I" Modifiers="Control" Command="{Binding ImportQuestionsCommand}" />

        <KeyBinding Key="Enter" Modifiers="Alt" Command="{Binding ToggleFullscreenCommand}" />

        <KeyBinding Key="Insert" Command="{Binding AddQuestionCommand}" />

        <KeyBinding Key="Delete" Command="{Binding DeleteQuestionCommand}" />
    </Window.InputBindings>
    
    <DockPanel>
        <views:MenuView DockPanel.Dock="Top" />
        <ContentControl Content="{Binding CurrentView}" />
    </DockPanel>

</Window>
